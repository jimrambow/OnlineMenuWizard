%h2 Setup a user - Step 1
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = devise_error_messages!
  .form-group
    = f.label 'Domain name'
    %br/
    = f.text_field :name, :autofocus => true, :class=>"form-control", :placeholder => "Enter your domain name"
  .form-group
    = f.label :email
    %br/
    = f.email_field :email, autofocus: true, :class=>"form-control", :placeholder => "Email"
  .form-group
    = f.label :password
    - if @validatable
      %i
        (#{@minimum_password_length} characters minimum)
    %br/
    = f.password_field :password, :class=>"form-control", :placeholder => "Password"
  .form-group
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation, :class=>"form-control", :placeholder => "Password Confirmation"
  %h3
    Plan Selected: #{plan_name(params[:plan_id])}
  = f.hidden_field :plan_id, :value => params[:plan_id]
  %br/
  %div= f.submit "Sign up", :class=>"btn btn-success"
= render "devise/shared/links"