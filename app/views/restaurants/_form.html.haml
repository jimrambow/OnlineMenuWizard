= form_for(@restaurant) do |f|
  = render 'form_errors'
  .form-group
    = f.label :name
    %br/
    = f.text_field :name, :class=>"form-control", :placeholder => "Restaurant Name"
  .form-group
    = f.label :description
    %br/
    = f.text_area :description , :class=>"form-control", :placeholder => "Description"
  / <haml_loud> f.hidden_field :organization_id, :value => @organization</haml_loud>
  .actions
    = f.submit :class=>"btn btn-default"
    = link_to 'Cancel', restaurants_path, :class=>"btn btn-default"