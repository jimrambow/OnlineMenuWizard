%p#notice= notice

%p
  %strong Name:
  = @restaurant.name

%p
  %strong Description:
  = @restaurant.description

%h3 Menus
- @menus.each do |m|

  = link_to m.title, menu_path(m)

  = link_to "Export to CSV", export_menus_restaurants_path(format: "csv", :restaurant_id => @restaurant.id), :class=>"btn btn-default"

= link_to "Add a Menu", new_menu_path(:restaurant_id => @restaurant.id), :class=>"btn btn-default"

= link_to 'Edit', edit_restaurant_path(@restaurant), :class=>"btn btn-default"

= link_to 'Back', restaurants_path, :class=>"btn btn-default"
