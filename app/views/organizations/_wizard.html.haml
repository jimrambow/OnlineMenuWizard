= form_for(@organization , :url => wizard_path, :method => :put) do |f|
  - if @organization.errors.any?
    #error_explanation
      %h2
        = pluralize(@organization.errors.count, "error")
        prohibited this organization from being saved:
      %ul
        - @organization.errors.full_messages.each do |msg|
          %li= msg
  .form-group
    = f.label 'Organization Name'
    = f.text_field :name, :class=>"form-control", :placeholder => "Organization Name"
  .form-group
    = f.label :description
    = f.text_area :description, :class=>"form-control", :rows=>"3", :placeholder => "Description"
  = f.submit 'Create', :class=>"btn btn-default"